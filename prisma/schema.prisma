generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgres"
  url      = env("DATABASE_URL")
}

model Tent {
  id       String  @id @default(uuid())
  name     String  @unique
  password String
  sells    Sell[]
  dishs    Dish[]
  drinks   Drink[]
}

model PaymentMethod {
  id                Int    @id @default(autoincrement())
  paymentMethodName String
  sells             Sell[]
}

model Sell {
  id              Int           @id @default(autoincrement())
  value           Float
  paymentMethod   PaymentMethod @relation(fields: [paymentMethodId], references: [id])
  paymentMethodId Int
  tent            Tent          @relation(fields: [tentId], references: [id])
  tentId          String
  createdAt       DateTime      @default(now())
  sellDishes      SellDish[]
  sellDrinks      SellDrink[]
}

model Dish {
  id         Int        @id @default(autoincrement())
  name       String
  value      Float
  dishCost   Float
  tent       Tent       @relation(fields: [tentId], references: [id])
  tentId     String
  sellDishes SellDish[]
}

model Drink {
  id         Int         @id @default(autoincrement())
  name       String
  value      Float
  drinkCost  Float
  tent       Tent        @relation(fields: [tentId], references: [id])
  tentId     String
  sellDrinks SellDrink[]
}

model SellDish {
  id       Int  @id @default(autoincrement())
  sell     Sell @relation(fields: [sellId], references: [id])
  sellId   Int
  dish     Dish @relation(fields: [dishId], references: [id])
  dishId   Int
  quantity Int
}

model SellDrink {
  id       Int   @id @default(autoincrement())
  sell     Sell  @relation(fields: [sellId], references: [id])
  sellId   Int
  drink    Drink @relation(fields: [drinkId], references: [id])
  drinkId  Int
  quantity Int
}
