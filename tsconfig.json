{
  "compilerOptions": {
    "target": "ES2018",                              
    "module": "commonjs",                             
    "moduleResolution": "node",                        
    "outDir": "./dist",                                
    "rootDir": "./src",                                
    "esModuleInterop": true,                           
    "strict": true,                                   
    "skipLibCheck": true,                              
    "forceConsistentCasingInFileNames": true,          
    "resolveJsonModule": true,                         
    "declaration": true,                                
    "declarationDir": "./dist/types",                
    "sourceMap": true,                                
    "removeComments": true,                        
    "noEmitOnError": true,                              
    "noImplicitAny": true                             
  },
  "include": [
    "src/**/*.ts"                                      
  ],
  "exclude": [
    "node_modules"                                     
  ]
}
